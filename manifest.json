{
  "manifest_version": 2,

  "name": "numWatchers",
  "description": "This extension shows a the number of watchers on a page",
  "version": "1.0",
  "icons": { "16": "icon.png",
             "48": "icon.png",
             "128": "icon.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "ngStats.js"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}